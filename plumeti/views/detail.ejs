<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Archivos CSS -->
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/detail.css">
    <!-- Archivos javascript -->
    <script src="https://kit.fontawesome.com/eff8b9a252.js" crossorigin="anonymous"></script>

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- Archivos CSS -->
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/detail.css">
    <title>Detail</title>
</head>

<body>



    <!-- Hoja de estilo para el nav navbar.css -->
    <%- include('partials/navbar.ejs') %>

    <!-- Hasta aca llega el menu de navegacion -->
    <div class="container">
        <div class="row">
            <div div class="col-lg-5 col-md-6 col-sm-12 product mt-5">
                <div class="left">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/images/<%=prod.image%>" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/images/<%=prod.image2%>" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/images/<%=prod.image3%>" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-6 col-sm-12 product mt-5">

                <div class="right">
                    <h2 class="text-center my-3"><%=prod.name%></h2>
                    <h2 class="text-center my-3">$<%=prod.price%></h2>
                    <p class="text-center my-3"><%=prod.description%><br>
                        <%=prod.composicion%>
                        <div id="aclaracion">Aclaraci√≥n: <%=prod.aclaracion%></div>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-1 col-sm-0 product mt-2">

            </div>
            <div class="col-lg-3 col-md-5 col-sm-6 product mt-2">
                <button id="boton" type="button" class="btn btn-dark"><a href="/cart" class="nav-link">Comprar
                        ahora</a></button>
            </div>
            <div class="col-lg-3 col-md-5 col-sm-6 product mt-2">
                <button id="boton" type="button" class="btn btn-dark"><a href="/cart" class="nav-link">Agregar al
                        carrito</a></button>
            </div>
            <div class="col-lg-0 col-md-1 col-sm-0 product mt-2">

            </div>
        </div>
    </div>
    <div class="container">
        <div col="row">
            <div class="comentarios">
                <h3>Comentarios</h3>
            </div>
        </div>
    </div>
    </div>
    <div class="container">
        <form>
            <div class="form-group">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                    placeholder="Dejanos tu comentario!" action="/detail" ></textarea>
            </div>
            <button>Enviar</button>
        </form>
    </div>

    <div class="container">
        <div col="row">
            <% comments.forEach(function(comment){ %>
            <div class="publicado">
                <h4><%=comment.pregunta%></h4><br>
                <h6><%=comment.respuesta%></h6>
                <br>
            </div>
            <% }) %>
        </div>
    </div>



        <%- include('partials/footer.ejs') %>
        </main>
        <!-- Hoja de estilo para el footer footer.css -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>
</body>

</html>